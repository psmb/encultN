parser: "babel-eslint"

extends: 'airbnb'

env:
  browser: true
  node: true
  es6: true
  mocha: true

rules:
  react/jsx-quotes: 0
  jsx-quotes: [2, 'prefer-single']
  new-cap: [2, { "capIsNewExceptions": [
    "List",
    "Map",
    "OrderedMap",
    "Set",
    "OrderedSet",
    "Stack",
    "Range",
    "Repeat",
    "Record",
    "Seq",
    "KeyedSeq",
    "IndexedSeq",
    "SetSeq",
    "Iterable",
    "KeyedIterable",
    "IndexedIterable",
    "SetIterable",
    "Collection",
    "KeyedCollection",
    "IndexedCollection",
    "SetCollection"
    ]}]

ecmaFeatures:
  jsx: true
  module: true

plugins:
  - react
